<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardArticle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:layout_marginEnd="@dimen/activity_horizontal_margin"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:padding="@dimen/activity_horizontal_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgArticle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_height"
            android:layout_marginBottom="@dimen/nav_header_vertical_spacing"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/txtArticleTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgArticle"
            android:layout_marginStart="@dimen/nav_header_vertical_spacing"
            android:layout_marginEnd="@dimen/nav_header_vertical_spacing"
            android:layout_marginBottom="@dimen/nav_header_vertical_spacing"
            android:maxLines="3"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/large_txt_size" />

        <TextView
            android:id="@+id/txtAuthorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtArticleTitle"
            android:layout_marginStart="@dimen/nav_header_vertical_spacing"
            android:layout_marginBottom="@dimen/small_margin" />

        <TextView
            android:id="@+id/txtPublishDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtAuthorName"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/nav_header_vertical_spacing"
            android:layout_marginBottom="@dimen/activity_vertical_margin" />
    </RelativeLayout>

</android.support.v7.widget.CardView>
